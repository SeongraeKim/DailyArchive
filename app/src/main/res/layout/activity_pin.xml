<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/passcode_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBCEFF"
        app:correctStateColor="@android:color/holo_green_light"
        app:wrongStateColor="@android:color/holo_red_light"
        app:numberTextColor="@android:color/darker_gray"
        app:firstInputTip="비밀번호를 입력해주세요 :)"
        app:correctInputTip="딩동댕!"
        app:wrongInputTip="일치하지 않습니다.\n다시 입력해주세요."
        app:passcodeViewType="set_passcode"/>
</androidx.constraintlayout.widget.ConstraintLayout>